@import 'variables'
@import './components/fonts'

:root
  font-size: 16px
*
  box-sizing border-box
  &:before, &:after
    box-sizing border-box
body
  margin 0
  font-family roboto

ul
  margin 0
  padding 0
  list-style none

a
  color $white
a:hover
  color $apricot
a, a:hover
  text-decoration none

h1
  color $white
  line-height .9
  font-size 9.375rem
h2
  font-size 1.875rem
  margin-bottom 40px
h3
  font-size 1.5rem
  margin-bottom 20px
  font-family kaushan
h4
  color $grey
  line-height 1.5
  font-size 0.9375rem
h5
  font-size 0.875rem
  font-family montserrat

h1, h2
  font-family montserrat-bold
h2, h3
  color $dark
h1, h2, h5
  text-transform uppercase

@media (max-width: 1199.98px)
  :root
    font-size 15px
@media (max-width: 991.98px)
  :root
    font-size 14px
  h1
    font-size 4rem
